<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
        <RestoreLockedMode Condition="'$(CI)' == 'true'">true</RestoreLockedMode>
        <!--<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>-->
        <EnableDynamicLoading>true</EnableDynamicLoading>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <LangVersion>10</LangVersion>
        <Nullable>enable</Nullable>
        <DisableFastUpToDateCheck>True</DisableFastUpToDateCheck>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="KeraLua" Version="1.3.3" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.1.0" />
        <PackageReference Include="NLua" Version="1.6.0" />
        <PackageReference Include="Shoko.Plugin.Abstractions" Version="2.4.0-alpha3">
            <ExcludeAssets>runtime</ExcludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <None Include="lua\**\*.*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <Target Name="UpdateAssemblyInfo" BeforeTargets="BeforeCompile">
        <Exec Command="git describe --match=v[0-9]%2A --tags --abbrev=0 --always" ConsoleToMSBuild="true">
            <Output TaskParameter="ConsoleOutput" PropertyName="GitVerTag" />
        </Exec>
        <Exec Command="git describe --match=v[0-9]%2A --tags --abbrev=7 --always --long --dirty" ConsoleToMSBuild="true">
            <Output TaskParameter="ConsoleOutput" PropertyName="GitInfo" />
        </Exec>
        <ItemGroup>
            <AssemblyAttributes Include="AssemblyVersion">
                <_Parameter1>$([System.Text.RegularExpressions.Regex]::Match("$(GitVerTag)", "\d+\.\d+\.\d+"))</_Parameter1>
            </AssemblyAttributes>
            <AssemblyAttributes Include="AssemblyInformationalVersion">
                <_Parameter1>$(GitInfo)</_Parameter1>
            </AssemblyAttributes>
            <AssemblyAttributes Include="AssemblyProduct">
                <_Parameter1>$(ProjectName)</_Parameter1>
            </AssemblyAttributes>
            <AssemblyAttributes Include="AssemblyTitle">
                <_Parameter1>$(ProjectName)</_Parameter1>
            </AssemblyAttributes>
            <AssemblyAttributes Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
                <_Parameter1>LuaRenamerTests</_Parameter1>
            </AssemblyAttributes>
        </ItemGroup>
        <MakeDir Directories="$(IntermediateOutputPath)" />
        <WriteCodeFragment Language="C#" OutputFile="$(GeneratedAssemblyInfoFile)" AssemblyAttributes="@(AssemblyAttributes)" />
        <ItemGroup>
            <Compile Include="$(GeneratedAssemblyInfoFile)" />
        </ItemGroup>
    </Target>

    <Target Name="PackageForRelease" AfterTargets="AfterBuild">
        <ItemGroup>
            <LuaOut Include="lua/**/*.*" />
            <WindowsOut Include="$(OutDir)runtimes/win-x64/native/lua54.dll" />
            <DockerOut Include="docker_build/liblua54.so" />
            <SharedOut Include="$(OutDir)$(ProjectName).dll;$(OutDir)KeraLua.dll;$(OutDir)NLua.dll" />
        </ItemGroup>
        <Copy SourceFiles="@(WindowsOut);@(SharedOut)" DestinationFolder="$(OutDir)WindowsOut/$(ProjectName)" SkipUnchangedFiles="true" />
        <Copy SourceFiles="@(DockerOut);@(SharedOut)" DestinationFolder="$(OutDir)DockerOut/$(ProjectName)" SkipUnchangedFiles="true" />
        <Copy SourceFiles="@(LuaOut)" DestinationFolder="$(OutDir)WindowsOut/$(ProjectName)/lua/%(LuaOut.RecursiveDir)" SkipUnchangedFiles="true" />
        <Copy SourceFiles="@(LuaOut)" DestinationFolder="$(OutDir)DockerOut/$(ProjectName)/lua/%(LuaOut.RecursiveDir)" SkipUnchangedFiles="true" />
        <ZipDirectory SourceDirectory="$(OutDir)WindowsOut" DestinationFile="$(SolutionDir)$(ProjectName)_Win_$(GitInfo).zip" Overwrite="true" />
        <ZipDirectory SourceDirectory="$(OutDir)DockerOut" DestinationFile="$(SolutionDir)$(ProjectName)_Docker_$(GitInfo).zip" Overwrite="true" />
        <RemoveDir Directories="$(OutDir)WindowsOut;$(OutDir)DockerOut" />
    </Target>

    <Target Name="Cleaner" AfterTargets="AfterClean">
        <RemoveDir Directories="$(OutDir)" />
    </Target>
</Project>
